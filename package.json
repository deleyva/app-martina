{
  "name": "martina_bescos_app",
  "version": "1.0.0",
  "description": "Frontend para Martina BescÃ³s App",
  "scripts": {
    "create-css": "mkdir -p ./martina_bescos_app/static/css && echo '@import \"tailwindcss\";\n@plugin \"daisyui\" {\n  themes: light --default, dark --prefersdark;\n  logs: true;\n}' > ./martina_bescos_app/static/css/index.css",
    "build-css": "npx @tailwindcss/cli --input ./martina_bescos_app/static/css/index.css --output ./martina_bescos_app/static/css/output.css --minify",
    "build-js": "mkdir -p ./martina_bescos_app/static/js && npx esbuild ./martina_bescos_app/static/js/src/music_cards.js --bundle --outfile=./martina_bescos_app/static/js/music_cards.js --format=iife --minify",
    "build": "npm run create-css && npm run build-css && npm run build-js",
    "dev": "npm run create-css && npx @tailwindcss/cli --input ./martina_bescos_app/static/css/index.css --output ./martina_bescos_app/static/css/output.css --watch",
    "dev-js": "mkdir -p ./martina_bescos_app/static/js && npx esbuild ./martina_bescos_app/static/js/src/music_cards.js --bundle --outfile=./martina_bescos_app/static/js/music_cards.js --format=iife --watch"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "daisyui": "^5.0.0",
    "esbuild": "^0.25.10"
  },
  "dependencies": {
    "chordsheetjs": "^12.3.1"
  }
}
